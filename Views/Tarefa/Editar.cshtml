@model GestorTarefas.Models.PessoaTarefaViewModel

@{
    ViewData["Title"] = "Editar Tarefa";
}
<br>
<h1>Editar Tarefa</h1>
<hr>
<form asp-controller="Tarefa" asp-action="Editar" method="post">
    <div style="width: 50px;">
        <div>
            <label asp-for=@Model.Tarefa.Nome>Nome</label>
            <input asp-for=@Model.Tarefa.Nome type="text" style="width: 200px;">
        </div>
        <div>
            <label asp-for=@Model.Tarefa.FeitoOuNao>FeitoOuNao</label>
            <input asp-for=@Model.Tarefa.FeitoOuNao type="number" placeholder="Feito = 1 / AindaNao = 2"
                style="width: 200px;">
        </div>
    </div>
    <button class="btn btn-warning" type="submit" style="margin-top: 10px;">Editar Tarefa</button>
</form>
<a asp-controller="Tarefa" asp-action="TodasTarefas" class="btn btn-secondary" style="margin-top: 5px;">Voltar</a>
