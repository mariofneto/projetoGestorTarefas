@model GestorTarefas.Models.Pessoa

@{
    ViewData["Title"] = "Editar Pessoa";
}
<br>
<div class="form-group" style="width: 30%">
  <h1 style="text-align: center;">Editar Pessoa</h1>
  <hr>
  <form asp-controller="Pessoa" asp-action="Editar" method="post">
    <div class="form-floating mb-3">
      <input asp-for=@Model.Nome type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
      <label asp-for=@Model.Nome for="floatingInput">Nome</label>
    </div>
    <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Editar</button>
    <a asp-controller="Pessoa" asp-action="TodasPessoas" class="btn btn-secondary" style="margin-top: 10px;">Voltar</a>
  </form>
</div>

