@model GestorTarefas.Models.Pessoa

@{
    ViewData["Title"] = "Deletar Pessoa";
}
<br>
<br>
<div style="display: flex; justify-content: center">
    <div class="card border-danger mb-3" style="width: 40rem; text-align: center;">
        <div class="card-header" style="background-color: #dc3545;">
            <h1 style="font-weight: 500;">Deletar Pessoa</h1>
        </div>
        <div class="card-body">
            <h4 class="card-title">Id = @Model.Id</h4>
            <h4 class="card-text">Nome = @Model.Nome</h4>
        </div>
        <div>
            <form asp-controller="Pessoa" asp-action="Deletar" method="post">
                <button type="submit" class="btn btn-danger">Sim</button>
                <a asp-controller="Pessoa" asp-action="TodasPessoas" class="btn btn-secondary">Voltar</a>
            </form>
        </div>
    </div>
</div>
